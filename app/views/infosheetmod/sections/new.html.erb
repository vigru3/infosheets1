  <h1>Add a new section</h1>

<%= simple_form_for @section, url: infosheetmod_client_sections_path(current_client.id) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :sectionname,
                        required: true,
                        autofocus: true%>
          </div>

          <div class="form-actions">
            <%= f.submit "Create a New Section" %>
          </div>
        <% end %>